<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="Logout"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/dbData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/userName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/dbData"
        app:layout_constraintStart_toEndOf="@+id/userAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/dbData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picture" />

    <ListView
        android:id="@+id/dbData"
        android:layout_width="409dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/processorNameInput"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="Processor Name"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/processorSocketInput"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@+id/processorIdInput"
        app:layout_constraintTop_toBottomOf="@+id/dbData"
        app:layout_constraintVertical_bias="0.116" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/processorIdInput"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:hint="ID"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dbData"
        app:layout_constraintVertical_bias="0.116" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/processorSocketInput"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:hint="Socket"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/processorCompanyInput"
        app:layout_constraintTop_toBottomOf="@+id/dbData"
        app:layout_constraintVertical_bias="0.116" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/processorCompanyInput"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:hint="Company"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dbData"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/addNewRow"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Add"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dbData"
        app:layout_constraintVertical_bias="0.411" />

    <Button
        android:id="@+id/crashButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Crash"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNewRow"
        app:layout_constraintVertical_bias="0.523" />

</androidx.constraintlayout.widget.ConstraintLayout>